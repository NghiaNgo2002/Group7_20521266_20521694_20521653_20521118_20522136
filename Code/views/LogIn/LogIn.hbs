<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background-color: #f1f1f1;
  }

  .login-form {
    width: 300px;
    margin: 100px auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .login-form h2 {
    text-align: center;
    margin-bottom: 20px;
  }

  .login-form label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .login-form input[type="text"],
  .login-form input[type="password"] {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .login-form input[type="submit"] {
    width: 100%;
    background-color: #4caf50;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .login-form input[type="submit"]:hover {
    background-color: #45a049;
  }

  .social-login-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .social-login-button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #3b5998;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
    margin-bottom: 10px;
  }

  .social-login-button:hover {
    background-color: #2d4373;
  }

  .instagram-login-button {
    background-color: #c32aa3;
  }

  .gmail-login-button {
    background-color: #dd4b39;
  }

  .icon {
    margin-right: 8px;
  }
</style>

<div class="login-form">
  <h2>Login</h2>
  <form action="/login" method="POST">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>

    <input type="submit" value="Login">

    <div class="or-separator">OR</div>

    <div class="social-login-buttons">
      <button class="social-login-button" onclick="loginWithFacebook()">
        <i class="fab fa-facebook-f icon"></i>
        Login with Facebook
      </button>
      <button class="social-login-button instagram-login-button" onclick="loginWithInstagram()">
        <i class="fab fa-instagram icon"></i>
        Login with Instagram
      </button>
      <button class="social-login-button gmail-login-button" onclick="loginWithGoogle()">
        <i class="fab fa-google icon"></i>
        Login with Gmail
      </button>
    </div>
  </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

