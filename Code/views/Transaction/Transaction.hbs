   <script>
      function renderTransactionItems() {
         // Lấy thông tin giỏ hàng từ localStorage
         var TransactionItems = JSON.parse(localStorage.getItem("TransactionItems")) || [];

         // Hiển thị sản phẩm trong giỏ hàng
         var TransactionItemsTable = document.getElementById("TransactionItems");
         cartItemsTable.innerHTML = "";

         for (var i = 0; i < cartItems.length; i++) {
            var row = document.createElement("tr");

            var codeCell = document.createElement("td");
            codeCell.textContent = cartItems[i].code;
            row.appendChild(codeCell);

            var nameCell = document.createElement("td");
            nameCell.textContent = cartItems[i].name;
            row.appendChild(nameCell);

            var quantityCell = document.createElement("td");
            quantityCell.textContent = cartItems[i].quantity;
            row.appendChild(quantityCell);

            var priceCell = document.createElement("td");
            priceCell.textContent = "$" + cartItems[i].price;
            row.appendChild(priceCell);

            cartItemsTable.appendChild(row);
         }
      }

      function proceedToPayment() {
         // Kiểm tra giỏ hàng
         var cartItems = JSON.parse(localStorage.getItem("cartItems")) || [];

         if (cartItems.length === 0) {
            alert("Your cart is empty. Please add some items.");
         } else {
            // Chuyển hướng đến trang thanh toán
            window.location.href = "payment.html";
         }
      }

      // Render sản phẩm trong giỏ hàng khi trang cart.html được tải
      renderCartItems();
   </script>
