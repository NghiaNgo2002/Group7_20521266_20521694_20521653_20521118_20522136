<style>
.product {
   display: flex;
   align-items: center;
   justify-content: center;
   margin: 20px auto;
}
.product-container {
         margin: 20px auto;
         max-width: 1000px;
         height: 500px;
         padding: 20px;
         border: 1px solid #ccc;
         border-radius: 5px;
         background-color: #f9f9f9;
         text-align: center;
         display: flex;
         /* Center the content */
}
.product-image {
   width: 300px;
   height: 300px;
   display: flex;
   align-items: left;
   justify-content: left;
   overflow: hidden;

}

.product-image img {
   width: 100%;
   height: 100%;
   object-fit: cover;
   display: block;
   display: flex;
   flex-direction: column;
   justify-content: left;   
}

.product-details {
   width: 300px;
   height: 360px;
   margin-left: 50;
}

.product-name {
   font-size: 24px;
   font-weight: bold;
   margin-bottom: 10px;
   text-align: center;
}

.product-specifications {
   margin-bottom: 10px;
   color: #000000;
   text-align: center;
}

.product-specifications p {
   margin: 5px 0;
}

.product-price {
   font-weight: bold;
   margin-top: 10px;
   color: #e67e22;
   text-align: center;
}

.product-warranty {
   margin-top: 5px;
   text-align: center;
}


.product-button {
         display: inline-block;
         padding: 10px 20px;
         background-color: #2980b9;
         color: #fff;
         text-decoration: none;
         border-radius: 5px;
         font-size: 16px;
         margin: 0 auto;
         display: flex;
         flex-direction: column;
         justify-content: center;   
         width: 180px;
         height: 40px;
         text-align: center;
         
      }

      .product-button:hover {
         background-color: #1c7dbe;
      }
       body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background-color: #f1f1f1;
  }

  .search-form {
    width: 300px;
    margin: 100px auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .search-form h2 {
    text-align: center;
    margin-bottom: 20px;
  }

  .search-form label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .search-form input[type="text"] {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .search-form input[type="submit"] {
    width: 100%;
    background-color: #4caf50;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .search-form input[type="submit"]:hover {
    background-color: #45a049;
  }

   </style>


<!-- products -->
      <div  class="products">
         <div class="container">
            <div class="row">
               <div class="col-md-12">
                  <div class="titlepage">
                     <h2>Our Products</h2>
                  </div>
               </div>
            </div>
            <div class="search-form">
  <h2>Search Product</h2>
  <div>
  <form action="" method="GET">
    <label for="search_productname">Search Product Name:</label>
    <input type="text" id="search_query" name="name" required>
    <input type="submit" value="Search">
  </form>
  </div>
</div>


            <div class="row">
               <div class="col-md-12">
                  <div class="our_products">
                     <div class="row">
                        {{#each Products}}        
                         <div class="product-container">
         <div class="product">
            <div class="product-image">
               <img src="images/{{id}}.jpg" alt="Product Image">
            </div>
            <div class="product-details">
               <h3 class="product-name">{{name}}</h3>
               <div class="product-specifications">
                  <p>ID: {{id}}</p>
                  <p>Type: {{type}}</p>
                  <p>Description: {{description}}</p>
               </div>
               <p class="product-price">Price: {{price}}</p>
               <p class="product-warranty">Warranty: 36 months</p>
               <a class="product-button" href="#">Order Product</a>
            </div>
         </div>
      </div>
                        {{/each}}
                        
                        <div class="col-md-12">
                           <a class="read_more" href="#">See More</a>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- end products -->