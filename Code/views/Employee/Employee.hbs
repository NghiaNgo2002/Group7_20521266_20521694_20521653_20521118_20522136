<div class="body-section">
   <div class="container">
      <div class="row">
         <div class="col-md-12">
            <h2>Employee Information</h2>
            <table class="table">
               <thead>
                  <tr>
                     <th>ID</th>
                     <th>Name</th>
                     <th>Phone</th>
                     <th>Address</th>
                  </tr>
               </thead>
               <tbody>
                  {{#each Employee}}
                  <tr>
                     <td>{{id}}</td>
                     <td>{{name}}</td>
                     <td>{{phone}}</td>
                     <td>{{address}}</td>
                  </tr>
                  {{/each}}
                  </tbody>
                  </table>
                   </div>
      </div>
   </div>
</div>

 
   <div class="container">
         <div class="row">
             <div class="col-md-12">
               <h2>Employee Management</h2>
               <div class="buttons-container">
                  <button class="btn btn-primary" onclick="showInsertForm()">Insert Employee</button>
                  <button class="btn btn-danger" onclick="showDeleteForm()">Delete Employee</button>
                  <button class="btn btn-success" onclick="showUpdateForm()">Update Employee</button>
               </div>
               <div id="insertForm" style="display: none;">
                  <h3>Insert Employee</h3>
                  <form onsubmit="insertEmployee(event)">
                     <!-- Insert form fields here -->
                     <button type="submit" class="btn btn-primary">Insert</button>
                  </form>
               </div>
               <div id="deleteForm" style="display: none;">
                  <h3>Delete Employee</h3>
                  <form onsubmit="deleteEmployee(event)">
                     <!-- Delete form fields here -->
                     <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
               </div>
               <div id="updateForm" style="display: none;">
                  <h3>Update Employee</h3>
                  <form onsubmit="updateEmployee(event)">
                     <!-- Update form fields here -->
                     <button type="submit" class="btn btn-success">Update</button>
                  </form>
               </div>
               <div id="employeeTable" style="display: none;">
                  <h3>Employee Information</h3>
                  <table>
                     <thead>
                        <tr>
                           <th>ID</th>
                           <th>Name</th>
                           <th>Position</th>
                        </tr>
                     </thead>
                     <tbody id="employeeData">
                        <!-- Employee data will be dynamically added here -->
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
<!-- body -->
<script>
   function showInsertForm() {
      window.location.href = "/EmployeeInsert";
   }
</script>

<script>
   function showDeleteForm() {
      window.location.href = "/EmployeeDelete";
   }
</script>

<script>
   function showUpdateForm() {
      window.location.href = "/EmployeeUpdate";
   }
</script>
